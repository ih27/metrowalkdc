<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="co.swatisi.team.metrowalkdc">

    <application
        android:allowBackup="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity   android:name=".activity.MenuActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity   android:name=".activity.MetroStationsActivity"
                    android:label="@string/metro_stations_activity_label">

            <meta-data android:name="android.app.searchable"
                android:resource="@xml/searchable" />

        </activity>
        <activity android:name=".activity.LandmarksActivity" />
        <activity   android:name=".activity.LandmarkDetailActivity"
                    android:label="@string/landmark_detail_activity_label"/>
    </application>

    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

</manifest>