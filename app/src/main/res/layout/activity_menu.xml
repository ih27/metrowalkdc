<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical|center_horizontal"
    android:orientation="vertical"
    android:background="@drawable/img_1363"
    tools:context="co.swatisi.team.metrowalkdc.activity.MenuActivity">

    <Button
        android:id="@+id/favorite_landmarks_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/favorite_landmarks"/>

    <Button
        android:id="@+id/closest_station_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/closest_station"/>

    <Button
        android:id="@+id/stations_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/metro_stations"/>

</LinearLayout>
