<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/landmarkCard"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp">

     Used for the ripple effect on touch
    <LinearLayout
    android:id="@+id/landmarkHolder"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?android:selectableItemBackground"
    android:orientation="horizontal" />

    <LinearLayout
        android:id="@+id/landmarkNameHolder"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_gravity="bottom"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginBottom="8dp">

            <ImageView
                android:id="@+id/landmark_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_launcher_background" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/landmark_text_holder"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginTop="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginBottom="8dp">

            <TextView
                android:id="@+id/landmark_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Landmark Name"
                android:textAppearance="?android:textAppearanceMedium" />

            <TextView
                android:id="@+id/landmark_rating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Landmark Rating"
                android:textAppearance="?android:textAppearanceSmall" />

            <TextView
                android:id="@+id/landmark_distance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Distance miles away"
                android:textAppearance="?android:textAppearanceSmall" />


        </LinearLayout>
    </LinearLayout>


    <!--TextView
        android:id="@+id/landmarkName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:gravity="start"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:textAppearance="?android:attr/textAppearanceLarge" /-->


</android.support.v7.widget.CardView>

